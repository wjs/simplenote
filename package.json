{
  "name": "simplenote",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "PORT=4000 react-app-rewired start",
    "build": "react-app-rewired build",
    "server": "nodemon --watch ./server.js ./server.js",
    "test": "react-app-rewired test",
    "eject": "react-scripts eject"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "prettier": {
    "bracketSpacing": true,
    "printWidth": 100,
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5"
  },
  "proxy": "http://localhost:4010",
  "dependencies": {
    "@koa/cors": "^3.0.0",
    "@koa/router": "^8.0.2",
    "@material-ui/core": "^4.5.1",
    "@material-ui/icons": "^4.5.1",
    "@types/codemirror": "^0.0.78",
    "@types/dompurify": "^0.0.33",
    "@types/highlight.js": "^9.12.3",
    "@types/jest": "24.0.19",
    "@types/marked": "^0.6.5",
    "@types/mousetrap": "^1.6.3",
    "@types/node": "12.7.12",
    "@types/react": "16.9.6",
    "@types/react-dom": "16.9.2",
    "@types/uuid": "^3.4.5",
    "axios": "^0.19.0",
    "codemirror": "^5.58.2",
    "dompurify": "^2.0.6",
    "koa": "^2.11.0",
    "koa-bodyparser": "^4.2.1",
    "lowdb": "^1.0.0",
    "marked": "^0.7.0",
    "mousetrap": "^1.6.3",
    "react": "^16.10.2",
    "react-codemirror2": "^6.0.0",
    "react-dom": "^16.10.2",
    "react-scripts": "3.2.0",
    "typescript": "3.6.4",
    "unstated-next": "^1.1.0",
    "uuid": "^3.3.3"
  },
  "devDependencies": {
    "babel-plugin-import": "^1.12.2",
    "customize-cra": "^0.8.0",
    "husky": "^3.0.9",
    "lint-staged": "^9.4.2",
    "nodemon": "^1.19.4",
    "prettier": "^1.18.2",
    "react-app-rewired": "^2.1.3"
  }
}
