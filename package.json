{
  "name": "simplenote",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "PORT=4000 react-app-rewired start",
    "build": "react-app-rewired build",
    "test": "react-app-rewired test",
    "eject": "react-scripts eject"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "prettier": {
    "bracketSpacing": true,
    "printWidth": 100,
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5"
  },
  "dependencies": {
    "@material-ui/core": "^4.5.1",
    "@reach/router": "^1.2.1",
    "@types/jest": "24.0.19",
    "@types/node": "12.7.12",
    "@types/reach__router": "^1.2.6",
    "@types/react": "16.9.6",
    "@types/react-dom": "16.9.2",
    "@types/uuid": "^3.4.5",
    "react": "^16.10.2",
    "react-dom": "^16.10.2",
    "react-scripts": "3.2.0",
    "typescript": "3.6.4",
    "unstated-next": "^1.1.0",
    "uuid": "^3.3.3"
  },
  "devDependencies": {
    "babel-plugin-import": "^1.12.2",
    "customize-cra": "^0.8.0",
    "husky": "^3.0.9",
    "lint-staged": "^9.4.2",
    "prettier": "^1.18.2",
    "react-app-rewired": "^2.1.3"
  }
}
